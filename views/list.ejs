<%- include('header'); -%>
	<div class="box" id="heading">
		<h1><%= heading %></h1>
	</div>
	<div class="box">		
		<% for(let i = 0; i < newListItems.length; i++) { %>
			<form action="/delete" method="POST">
				<div class="item">
					<input name="itemId" value="<%= newListItems[i]._id %>" type="checkbox" onchange="this.form.submit()">
					<input type="hidden" name="listTitle" value="<%= heading %>">
					<p class="a"><%= newListItems[i].name %></p>
				</div>
			</form>
		<% } %>		
		<form class="item" method="POST">
			<input type="text" name="listItem" placeholder="New Item" autocomplete="off">
			<button type="submit">+</button>
		</form>
	</div>
<%- include('footer'); -%>